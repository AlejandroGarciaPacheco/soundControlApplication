<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PresetProfiles">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <RelativeLayout
            android:id="@+id/preset_RL_1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#ffffff"
            android:padding="16dp">

            <TextView
                android:id="@+id/preset1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#11ACC1"
                android:gravity="center"
                android:text="Preset1"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/preset_button_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:background="@drawable/arrow_right"
                android:backgroundTint="#EDEDED"
                android:src="@drawable/arrow_right"
                android:text="Customize"
                android:textAllCaps="false" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/preset_RL_2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#ffffff"
            android:padding="16dp">

            <TextView
                android:id="@+id/preset2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#11ACC1"
                android:gravity="center"
                android:text="Preset2"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/preset_button_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:background="@drawable/arrow_right"
                android:backgroundTint="#ffffff"
                android:src="@drawable/arrow_right"
                android:text="Customize"
                android:textAllCaps="false" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/preset_RL_3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#ffffff"
            android:padding="16dp">

            <TextView
                android:id="@+id/preset3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#11ACC1"
                android:gravity="center"
                android:text="Preset3"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/preset_button_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:background="@drawable/arrow_right"
                android:backgroundTint="#ffffff"
                android:src="@drawable/arrow_right"
                android:text="Customize"
                android:textAllCaps="false" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/preset_RL_4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#ffffff"
            android:padding="16dp">

            <TextView
                android:id="@+id/preset4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#11ACC1"
                android:gravity="center"
                android:text="Preset4"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/preset_button_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:background="@drawable/arrow_right"
                android:backgroundTint="#ffffff"
                android:src="@drawable/arrow_right"
                android:text="Customize"
                android:textAllCaps="false" />

        </RelativeLayout>


    </LinearLayout>
</ScrollView>